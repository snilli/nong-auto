{
  "name": "functions",
  "scripts": {
    "ts-node": "node --max-old-space-size=4096 -- node_modules/ts-node/dist/bin",
    "clear": "rm -rf lib",
    "lint": "eslint --ext .js,.ts .",
    "build": "npm run clear && tsc",
    "build-dev": "npm run clear && tsc -w",
    "serve-function": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "serve": "npm run build-dev | firebase emulators:start",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "14"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^9.11.1",
    "firebase-functions": "^3.15.4",
    "reflect-metadata": "^0.1.13",
    "@line/bot-sdk": "^7.3.0",
    "tsyringe": "^4.6.0",
    "pdfkit": "^0.12.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "@types/pdfkit": "^0.11.2",
    "@types/uuid": "^8.3.1",
    "eslint": "^7.32.0",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.1",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.22.0",
    "firebase-functions-test": "^0.2.0",
    "jest": "^27.0.6",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "node",
      "js",
      "json"
    ],
    "setupFiles": [
      "reflect-metadata"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/apps/**/tests/**/*.test.ts",
      "<rootDir>/cores/**/tests/**/*.test.ts",
      "<rootDir>/libs/**/tests/**/*.test.ts"
    ]
  },
  "private": true
}
